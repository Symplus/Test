<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.maxxrodriguez.test.PatientLoginActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Patient"
        android:id="@+id/NewPatientButton"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:textColor="#ffffffff"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_alignLeft="@+id/ExistingPatientButton"
        android:layout_alignStart="@+id/ExistingPatientButton"
        android:layout_alignRight="@+id/ExistingPatientButton"
        android:layout_alignEnd="@+id/ExistingPatientButton"
        android:background="#ffd50000"
        android:onClick="createPatient"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existing Patient"
        android:id="@+id/ExistingPatientButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#ffd50000"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:textColor="#ffffffff"
        android:padding="@dimen/activity_horizontal_margin" />

</RelativeLayout>

