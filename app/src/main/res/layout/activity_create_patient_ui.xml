<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="16dp"
    tools:context="com.example.maxxrodriguez.test.CreatePatientUI"
    android:id="@+id/createPatientUI">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="First and Last Name"
        android:ems="10"
        android:id="@+id/FnLtext"
        android:textColor="#ff737373"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Date of Birth (MM/DD/YYYY)"
        android:ems="10"
        android:id="@+id/dobText"
        android:textColor="#ff737373"
        android:singleLine="false"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/FnLtext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your information"
        android:id="@+id/textView"
        android:textColor="#ff000000"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Doctor Identification Number"
        android:ems="10"
        android:id="@+id/docIDText"
        android:textColor="#ff737373"
        android:singleLine="false"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/dobText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/dobText"
        android:layout_alignEnd="@+id/dobText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email Address"
        android:ems="10"
        android:id="@+id/emailText"
        android:textColor="#ff737373"
        android:singleLine="false"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/docIDText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/docIDText"
        android:layout_alignEnd="@+id/docIDText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Password"
        android:ems="10"
        android:id="@+id/passwordText"
        android:textColor="#ff737373"
        android:singleLine="false"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/emailText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/emailText"
        android:layout_alignEnd="@+id/emailText" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/button"
        android:textColor="#ffffffff"
        android:background="#ffd50000"
        android:layout_below="@+id/passwordText"
        android:layout_alignRight="@+id/passwordText"
        android:layout_alignEnd="@+id/passwordText"
        android:layout_marginTop="67dp" />

</RelativeLayout>
